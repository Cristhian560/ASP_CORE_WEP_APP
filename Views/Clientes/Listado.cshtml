@model List<Cliente>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    <a class="btn btn-primary"asp-area="" asp-controller="Clientes" asp-action="Editar" >Nuevo</a>

    <table>
        <thead>
            <tr>
                <th>Codigo</th>
                <th>Nombre</th>
                <th>Direccion</th>
                <th>Telefono</th>
                <th>Cuit</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var cliente in Model)
            {
                <tr>
                     <td>@cliente.Id</td>
                     <td>@cliente.Nombre</td>
                     <td>@cliente.Direccion</td>
                     <td>@cliente.Telefono</td>
                     <td>@cliente.Cuit</td>

                     <td>
                        <a class="btn btn-primary" asp-area="" asp-controller="Clientes" asp-action="Editar" asp-route-id="@cliente.Id">Editar</a>
                        <a class="btn btn-primary" asp-area="" asp-controller="Clientes" asp-action="Borrar" asp-route-id="@cliente.Id">Borrar</a>

                     </td>
                </tr>
            }
            
         </tbody>
    </table>
}
